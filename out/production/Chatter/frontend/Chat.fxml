<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="backend.controller.ChatController"
            prefHeight="400.0" prefWidth="600.0">

    <TextField fx:id="chatTextField" layoutY="402.0" prefHeight="55.0" prefWidth="447.0" promptText="&gt;" style="-fx-border-color: #1D3557;" onAction="#handle"/>
    <TextArea fx:id="chatTextArea" prefHeight="405.0" prefWidth="446.0" style="-fx-border-color: #1D3557; -fx-border-image-width: 50;" >
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </TextArea>
    <ListView fx:id="chatListView" layoutX="440.0" prefHeight="457.0" prefWidth="110.0" style="-fx-background-color: #1D3557; -fx-border-color: #fca311;">
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </ListView>
    <Button layoutX="381.0" layoutY="417.0" mnemonicParsing="false" style="-fx-background-color: #1D3557; -fx-background-radius: 90;" text="Send" textFill="WHITE" onAction="#handle"/>

</AnchorPane>

